BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_miles
            size_hint_x: 6
            on_text: app.convert_to_km(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'down'
                on_press: app.handle_increment(input_miles.text, -1)
